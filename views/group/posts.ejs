<div class="container firstContainer">
  <div class="row noMargin">
    <h1><%= group[0].name %></h1>
    <h3><%= group[0].about %></h3>
  </div>
  <div class="row noMargin">
    <div class="well">
      <div class="row">
        <div class="col-md-6">
          <h2>Recent Posts</h2>
        </div>
        <div class="col-md-6">
          <form class="form-inline">
            <div class="pull-right" style="margin-top: 20px;">
              <input type="text" class="form-control" name="search">
              <a class="btn btn-success">Search</a>
            </div>
          </form>
        </div>
      </div>
      <hr>
      <% group[0].posts.forEach(function(post) {%>
      <div class="row">
        <div class="col-md-12">
          <a href="#"><h3><strong><%= post.title %></strong></h3></a>
        </div>
        <div class="col-md-10">
          <p><%= post.question %></p>
        </div>
        <div class="col-md-2">
          <span class="pull-right"><!--Time Since Post Goes Here --></span>
        </div>
      </div>
      <hr>
      <% }); %>
      <a class="btn btn-success" id="CreatePostButton" href="/group/createPost/<%= group[0].id %>"> Create Post</a>
    </div>
  </div>
</div>
